- if @restaurants.any?
  - @restaurants.each do |restaurant|
    %br
    = link_to restaurant.name, restaurant_path(restaurant)
    %br
    - if current_user && current_user.id == restaurant.user_id
      = link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant)
      = link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete
    %br

    - if restaurant.reviews.any?
      %ul
        - restaurant.reviews.each do |review|
          %li
            %h3
              Review for
              = restaurant.name
            = review.thoughts
            %strong= review.rating
            \/5
            %em= time_ago_in_words(review.updated_at)
            %em ago
            %br
            - if current_user && current_user.id == review.user_id
              = link_to "Delete Review for #{restaurant.name}", restaurant_review_path(restaurant, review), method: :delete
    - else
      %p No reviews

    - if current_user && !current_user.has_reviewed?(restaurant)
      = link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant)
    %br
    = star_rating(restaurant.average_rating)
    %br

- else
  No restaurants yet

= link_to "Add a restaurant", new_restaurant_path
